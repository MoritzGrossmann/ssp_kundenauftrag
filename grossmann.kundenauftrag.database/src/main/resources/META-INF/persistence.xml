<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
    <persistence-unit name="customOrderDataPersistence" transaction-type="RESOURCE_LOCAL">
        <class>model.Customer</class>
        <class>model.ProductionOrder</class>
        <class>model.Order</class>
        <properties>
            <property name="eclipselink.jdbc.bind-parameters" value="true"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/customerOrder?useUnicode=true&amp;useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;serverTimezone=UTC"/>
            <property name="javax.persistence.jdbc.user" value="customer"/>
            <property name="javax.persistence.jdbc.password" value="customer"/>
            <property name="toplink.jdbc.url" value="jdbc:mysql://localhost:3306/customerOrder"/>
            <property name="toplink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/customerOrder"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="openjpa.ConnectionURL" value="jdbc:mysql://localhost:3306/customerOrder"/>
            <property name="openjpa.ConnectionDriverName" value="com.mysql.jdbc.Driver"/>
            <property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/customerOrder"/>
            <property name="eclipselink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
        </properties>

    </persistence-unit>
</persistence>